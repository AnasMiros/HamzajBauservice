{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://api.example.com/profile.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "items": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["Install", "Activate"]
                    },
                    "object": {
                        "type": "object",
                        "properties": {
                            "applicationCategory": {
                                "type": "string",
                                "enum" : ["Theme", "Plugin"]
                            }
                        },
                        "required": [
                            "type",
                            "name",
                            "applicationCategory"
                        ]
                    }
                },
                "required": [
                    "type",
                    "object"
                ]
            }
        }
    },
    "required": [
        "type",
        "totalItems",
        "items"
    ],
    "additionalProperties": true
}